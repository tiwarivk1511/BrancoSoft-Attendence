<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BrancoAttendence" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">#949494</item> <!-- Change colorPrimary to your desired color -->
        <item name="colorOnPrimary">@color/white</item> <!-- Change colorOnPrimary to your desired color -->
        <item name="android:statusBarColor">@color/statusBarColor</item> <!-- Change statusBarColor to your desired color -->
        <item name="android:windowBackground">#343434</item> <!-- Change windowBackground to your desired color -->
        <item name="android:colorBackground">@color/black</item> <!-- Change colorBackground to your desired color -->
        <item name="android:textColor"> @color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="drawableTint">@null</item>
        <item name="tint">@color/white</item>
        <item name="color">@color/black</item>
        <item name="android:solidColor">@color/black</item>
        <item name="backgroundTint">@color/black</item>
        <item name="background">@color/black</item>
    </style>


    <!-- Dark mode theme -->
    <style name="DatePickerDialogTheme.Dark" parent="ThemeOverlay.MaterialComponents.Dialog">
        <!-- Customize the color of the date picker header background -->
        <item name="colorPrimary">@color/statusBarColor</item>
        <!-- Customize the color of the date picker header text -->
        <item name="android:textColorPrimary">@color/statusBarColor</item>
        <!-- Customize the color of the date picker selection -->
        <item name="colorAccent">@color/white</item>
        <!-- Customize the color of the date picker date text -->
        <item name="android:textColorPrimaryInverse">@color/black</item>
    </style>
</resources>
